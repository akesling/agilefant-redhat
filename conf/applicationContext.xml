<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
                       "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<!--
		This PropertyPlaceholderConfigurer exists only to retrieve system properties for placeholders
		=> If agilefant.properties has been defined in the system environment, we'll
		have its location
		-->
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="order" value="0" />
	</bean>
	<bean id="applicationProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="ignoreResourceNotFound" value="false" />
		<property name="location" value="file://${agilefant.properties}" />
		<property name="properties">
			<bean id="defaultProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
				<property name="locations">
					<list>
						<value>/WEB-INF/database.properties</value>
						<value>/WEB-INF/configuration.properties</value>
					</list>
				</property>
			</bean>
		</property>
	</bean>
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="order" value="1" />
		<property name="properties" ref="applicationProperties" />
	</bean>
	
	<bean name="hibernateTransactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean name="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName">
			<value>${hibernate.connection.driver_class}</value>
		</property>
		<property name="username">
			<value>${hibernate.connection.username}</value>
		</property>
		<property name="password">
			<value>${hibernate.connection.password}</value>
		</property>
		<property name="url">
			<value>${hibernate.connection.url}</value>
		</property>
	</bean>

	<bean name="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation">
			<value>/WEB-INF/hibernate.cfg.xml</value>
		</property>
		<property name="hibernateProperties" ref="applicationProperties" />
	</bean>

	<bean name="contextViewManager"
		class="fi.hut.soberit.agilefant.web.context.DefaultContextViewManager" />

	<bean name="aefFunctions"
		class="fi.hut.soberit.agilefant.web.function.AEFFunctions">
		<property name="maxStrLength" value="15" />
	</bean>

	
</beans>