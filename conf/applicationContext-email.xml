<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
                       "http://www.springframework.org/dtd/spring-beans.dtd">
                      
<beans>

	<bean name="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host">
			<value>mysmtpserver.com</value>
		</property>
	</bean>
	
	<bean name="updateTaskTemplate" class="org.springframework.mail.SimpleMailMessage">
		<property name="from" value="agilefant@agilefant.org"/>
		<property name="subject" value="Task updated: {0}"/>
		<property name="text">
			<value><![CDATA[Task updated: {0}
View it from URL: http://hypertorni.dyndns.org/agilefant/editTask.action?taskId={1}
---
This message was automatically sent by Agilefant]]>
			</value>
		</property>
	</bean>
	
	<bean name="createTaskTemplate" class="org.springframework.mail.SimpleMailMessage">
		<property name="from" value="agilefant@agilefant.org"/>
		<property name="subject" value="Task created: {0}"/>
		<property name="text">
			<value><![CDATA[New task created: {0}
View it from URL: http://hypertorni.dyndns.org/agilefant/editTask.action?taskId={1}
---
This message was automatically sent by Agilefant]]>
			</value>
		</property>
	</bean>
 	
 	<bean id="emailUtil" class="fi.hut.soberit.agilefant.util.EmailUtil">
	
	 	<property name="smtpHost" value="smtp.example.test"/>
	 	<property name="smtpPort" value="25"/>
	 	
	 	<property name="useAuthentication" 	value="false"/>
	 	<!--
		 	<property name="login" 				value="abc"/>	 	
	 		<property name="password" 			value="def"/>	 		 	
	 	 -->

		<!-- String to postfix user's full name in email with -->
	 	<property name="namePostfix"		value=" (AGILEFANT)"/>
	 	
	 	<!-- String to prefix subject lines in email with -->
	 	<property name="subjectPrefix"		value="(AGILEFANT) "/>
 	
	</bean>
</beans>